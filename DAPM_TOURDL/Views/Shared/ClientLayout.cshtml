<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Đọc giá trị từ session
        var sessionBackgroundColor = '@Session["BackgroundColor_Client"]';

        // Chọn thẻ <body> và đặt màu nền dựa trên giá trị của session
        document.body.style.backgroundColor = sessionBackgroundColor;
    });
</script>
<script>
    $(document).ready(function () {
        var toggleValue = false;
        $('#toggleButton').click(function () {
            // Gửi một yêu cầu AJAX đến action "ChangeMode" trong TOURsController
            $.ajax({
                url: '/SwitchColor/ChangeMode',
                type: 'GET',
                data: { isLightMode: toggleValue },
                success: function (data) {
                    toggleValue = data;
                    document.body.style.backgroundColor = toggleValue;
                }
            });
        });
    });
</script>